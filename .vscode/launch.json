	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": true
		},
		// python do_segm.py --city Rio --no-src-data --freeze-classifier --unc-noise --lambda-ce 1 --lambda-ent 1  --save ./temp --lambda-ssl 0.1 --restore-from ./pretrained/GTA5_source.pth
		{
			"name": "do_segm.py",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/do_segm.py",
			"console": "integratedTerminal",
			"args": [
				"--city",
				"cityscapes", // If use cityscapes, means switch to Cityscapes dataset. cityscapes, Rio
				"--no-src-data",
				"--freeze-classifier",
				"--unc-noise",
				"--lambda-ce",
				"1",
				"--lambda-ent",
				"1",
				"--save",
				"./temp",
				"--lambda-ssl",
				"0.1",
				"--restore-from",
				"./pretrained/GTA5_source.pth",
				"--num-classes=19",
				// "--debug", // would visulize class
				"--batch-size",
				"4",
				"--learning-rate",
				"1e-9",
				// "./pretrained/Cityscapes_source_class13.pth"
			]
		},
		// python do_segm.py --city Rio --no-src-data --freeze-classifier --unc-noise --lambda-ce 1 --lambda-ent 1  --save ./temp --lambda-ssl 0.1 --restore-from ./pretrained/GTA5_source.pth
		{
			"name": "hydra_run",
			"type": "python",
			"request": "launch",
			"program": "${workspaceFolder}/do_segm.py",
			"console": "integratedTerminal",
			"args": [
				"city=cityscapes",
				"no_src_data=true",
				"freeze_classifier=true",
				"unc_noise=true",
				"lambda_ce=1",
				"lambda_ent=1",
				"lambda_ssl=0.1",
				"save=./tempx",
				"restore_from=/data/models/seg_models/UR/GTA5_source.pth",
				"num_classes=19",
				"batch_size=4",
				"learning_rate=1e-9",
				"debug=true"
			  ]
		},
	]
}